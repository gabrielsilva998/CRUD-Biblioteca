@{
    ViewData["Title"] = "Página Inicial";
}
    <div class="text-center">
        <h1 class="display-4">Bem-vindo à Biblioteca Online</h1>
        <p class="lead">Gerencie alunos, livros e empréstimos de forma simples, rápida e eficiente.</p>
    </div>

    <hr />

    <div class="row text-center mt-4">
        <div class="col-md-4 mb-3">
            <a asp-controller="Alunos" asp-action="Index" class="btn btn-danger btn-lg w-100">Gerenciar Alunos</a>
        </div>
        <div class="col-md-4 mb-3">
            <a asp-controller="Livros" asp-action="Index" class="btn btn-success btn-lg w-100">Gerenciar Livros</a>
        </div>
        <div class="col-md-4 mb-3">
            <a asp-controller="Emprestimos" asp-action="Index" class="btn btn-primary btn-lg w-100">Gerenciar Empréstimos</a>
        </div>
    </div>

    <hr class="mt-4" />
       
    


