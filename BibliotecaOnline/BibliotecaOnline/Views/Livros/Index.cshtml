@model IEnumerable<BibliotecaOnline.Models.Livro>
@{
    ViewData["Title"] = "Lista de Livros";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Lista de Livros</h2>

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-success">Adicionar Novo Livro</a>
    </div>

    <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark text-center">
            <tr>
                <th>Código</th>
                <th>Título</th>
                <th>Autor</th>
                <th>Categoria</th>
                <th>Editora</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Codigo</td>
                    <td>@item.Titulo</td>
                    <td>@item.Autor</td>
                    <td>@item.Categoria</td>
                    <td>@item.Editora</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Codigo" class="btn btn-primary btn-sm">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Codigo" class="btn btn-info btn-sm">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.Codigo" class="btn btn-danger btn-sm">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
