@model IEnumerable<BibliotecaOnline.Models.Aluno>
@{
    ViewData["Title"] = "Lista de Alunos";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Lista de Alunos</h2>

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-success">Adicionar Novo Aluno</a>
    </div>

    <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark text-center">
            <tr>
                <th>RA</th>
                <th>Nome</th>
                <th>Email</th>
                <th>Telefone</th>
                <th>Data de Nascimento</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.RA</td>
                    <td>@item.Nome</td>
                    <td>@item.Email</td>
                    <td>@item.Telefone</td>
                    <td>@item.DataNascimento.ToShortDateString()</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.RA" class="btn btn-primary btn-sm">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.RA" class="btn btn-info btn-sm">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.RA" class="btn btn-danger btn-sm">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
